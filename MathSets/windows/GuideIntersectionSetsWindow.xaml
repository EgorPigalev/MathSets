<Window x:Class="MathSets.windows.GuideIntersectionSetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathSets.windows"
        mc:Ignorable="d" Style="{StaticResource WindowMainStyle}"
        Title="Инструкция по выполнению здания" Height="650" Width="1000" MinHeight="650" MinWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Label Name="LBResult" Style="{StaticResource LabelHeaderResult}" Grid.Row="0" Content="Видеоинструкция по выполнению задания"/>
        <MediaElement Name="MEGuide" Source="GuideZadanieFirstIntersectionSets.mp4" Grid.Row="1" LoadedBehavior="Play"/>
        <Button Name="BtnExit" Content="Закрыть" Grid.Row="2" Style="{StaticResource ButtonMainStyle}" HorizontalAlignment="Center" Click="BtnExit_Click"/>
    </Grid>
</Window>
