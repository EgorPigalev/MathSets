<Page x:Class="MathSets.pages.LessonFourAndFive"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MathSets.pages"
      mc:Ignorable="d" Style="{StaticResource PageMainStyle}"
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="LessonFourAndFive">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource BorderHeader}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <Label Content="Диаграмма Эйлера-Венна. Знаки ∈ и ∉" Style="{StaticResource LabelHeaderText}"/>
                <Button Grid.Column="1" Name="BtnHint" Content="?" Style="{StaticResource ButtonMainStyle}" Margin="0 2 20 2" Click="BtnHint_Click"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource BorderMain}">
            <ScrollViewer>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Name="SpQuestionFirst" Background="White">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Name="TbQuestionFirst" Text="1) Дано множество А {"/>
                            <StackPanel Name="SpFiguresQuestionFirst" Orientation="Horizontal"/>
                            <TextBlock Text="}. Изобрази данное множество на рисунке."/>
                        </StackPanel>
                        <Canvas Name="CnvQuestionFirst" Height="280" Width="870" ClipToBounds="True" Margin="0 10 0 10"/>
                        <Button Name="BtnCheckQuestionFirst" Content="Проверить" Style="{StaticResource ButtonMainStyle}" HorizontalAlignment="Center" Click="BtnCheckQuestionFirst_Click"/>
                    </StackPanel>

                    <Menu Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <MenuItem Uid="1" Header="..." Style="{StaticResource MenuStyle}">
                            <MenuItem Header="Сохранить" Click="MenuSaved_Click"/>
                            <MenuItem Header="Открыть" Click="MenuOpenSaved_Click"/>
                            <MenuItem Header="Обновить" Click="MenuRefresh_Click"/>
                        </MenuItem>
                    </Menu>

                    <StackPanel Grid.Row="1" Name="SpQuestionSecond" Background="White" Margin="0 20 0 0">
                        <TextBlock Name="TbQuestionSecond" Text="2) Дана диаграмма. Выбери нужные знаки." Margin="0 0 0 10"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Width="310">
                                <StackPanel Name="SpQuestionSecondSetA" Margin="0 0 30 0"/>
                                <StackPanel Name="SpQuestionSecondSetB"/>
                            </StackPanel>

                            <Canvas Name="CnvQuestionSecond" Height="280" Width="550"/>
                        </StackPanel>
                        
                        <Button Name="BtnCheckQuestionSecond" Content="Проверить" Style="{StaticResource ButtonMainStyle}" HorizontalAlignment="Center" Margin="10" Click="BtnCheckQuestionSecond_Click"/>
                    </StackPanel>

                    <Menu Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 20 0 0">
                        <MenuItem Uid="2" Header="..." Style="{StaticResource MenuStyle}">
                            <MenuItem Header="Сохранить" Click="MenuSaved_Click"/>
                            <MenuItem Header="Открыть" Click="MenuOpenSaved_Click"/>
                            <MenuItem Header="Обновить" Click="MenuRefresh_Click"/>
                        </MenuItem>
                    </Menu>

                    <StackPanel Grid.Row="2" Name="SpQuestionThree" Background="White" Margin="0 20 0 0">
                        <TextBlock Name="TbQuestionThree" Text="3) Отметь элементы на диаграмме, если известно, что:" Margin="0 0 0 10"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Width="310">
                                <StackPanel Name="SpQuestionThreeSetA" Margin="0 0 30 0"/>
                                <StackPanel Name="SpQuestionThreeSetB"/>
                            </StackPanel>

                            <Canvas Name="CnvQuestionThree" Height="280" Width="550"/>
                        </StackPanel>

                        <Button Name="BtnCheckQuestionThree" Content="Проверить" Style="{StaticResource ButtonMainStyle}" HorizontalAlignment="Center" Margin="10" Click="BtnCheckQuestionThree_Click"/>
                    </StackPanel>

                    <Menu Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 20 0 0">
                        <MenuItem Uid="3" Header="..." Style="{StaticResource MenuStyle}">
                            <MenuItem Header="Сохранить" Click="MenuSaved_Click"/>
                            <MenuItem Header="Открыть" Click="MenuOpenSaved_Click"/>
                            <MenuItem Header="Обновить" Click="MenuRefresh_Click"/>
                        </MenuItem>
                    </Menu>
                </Grid>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2">
            <Button Name="BtnBack" Content="Назад" Grid.Row="2" Style="{StaticResource ButtonMainStyle}" HorizontalAlignment="Left" Margin="15" Click="BtnBack_Click"/>
        </Grid>
    </Grid>
</Page>