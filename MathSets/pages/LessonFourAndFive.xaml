<Page x:Class="MathSets.pages.LessonFourAndFive"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MathSets.pages"
      mc:Ignorable="d" Style="{StaticResource PageMainStyle}"
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="LessonFourAndFive">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="#F14C18" BorderThickness="1" Margin="20, 0, 20, 0">
            <Label Content="Диаграмма Эйлера-Венна. Знаки ∈ и ∉" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="50, 0, 50, 0"/>
        </Border>

        <Border Grid.Row="1" BorderBrush="#F14C18" BorderThickness="1" Margin="20, 10, 20, 0">
            <ScrollViewer>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Name="SpFirstQuestion">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                            <TextBlock Text="1) Дано множество {" FontSize="20"/>
                            <StackPanel Name="SpFigures" Orientation="Horizontal"/>
                            <TextBlock Text="}. Изобрази данное множество на рисунке." FontSize="20"/>
                        </StackPanel>
                        <Canvas Name="CnvFigure" Background="Aqua" Height="200"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2">
            <Button Name="BtnBack" Content="Назад" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Click="BtnBack_Click"/>
        </Grid>
    </Grid>
</Page>